<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="cn.jit.immessage.Info1Activity">

    <cn.jit.immessage.Round1ImageViewActivity
        android:id="@+id/info1_im"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="45dp"
        android:src="@mipmap/add_photo"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:text="昵称"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/info1_et1"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:maxLines="1"
            android:maxLength="11"
            android:layout_marginLeft="3dp"
            android:paddingLeft="10dp"
            android:background="@drawable/shape3_button"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:text="性别"

            android:textSize="16dp"/>
        <RadioGroup

            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="horizontal"

            android:id="@+id/info1_sex">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="17dp"
                android:id="@+id/info1_rb1"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_marginLeft="50dp"
                android:textSize="17dp"
                android:id="@+id/info1_rb2"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"

            android:text="出生日期"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/info1_tv1"
            android:inputType="date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/info1_btn2"
            android:text="设置时间"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:background="@drawable/shape3_button"
         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:text="邮箱地址"
            android:textSize="16dp"
            android:id="@+id/textView" />

        <EditText
            android:id="@+id/info1_et2"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/shape3_button"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:text="个人签名"
            android:textSize="16dp"
            android:id="@+id/textView2" />

        <EditText
            android:id="@+id/info1_et3"
            android:layout_width="195dp"
            android:layout_height="32dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="3dp"
            android:maxLength="12"
            android:textSize="15dp"
            android:background="@drawable/shape3_button"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(不超过12字)"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="2dp"/>
    <Button
        android:id="@+id/info1_btn3"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:text="注册"
        android:textSize="16dp"
        android:textColor="#ffffffff"
        android:layout_gravity="center"
        android:background="@drawable/shape6_button"
        android:layout_marginTop="30dp"/>
</LinearLayout>
