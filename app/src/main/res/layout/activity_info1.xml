<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#eeeeee"
    tools:context="cn.jit.immessage.Info1Activity">
<ImageView
    android:id="@+id/im_info1"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/ic_menu_camera"
    android:layout_gravity="center"/>
    <Button
        android:id="@+id/btn_info1"
        android:text="确定"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt1_info1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="昵称"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/et1_info1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt2_info1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="性别"
            android:textSize="25sp"/>
        <RadioGroup

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="75dp"
            android:id="@+id/sex">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="24sp"
                android:id="@+id/radioButton1"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="24sp"
                android:id="@+id/radioButton2"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt3_info1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="出生日期"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/txt3_1_info1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn1_info1"
            android:text="设置时间"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt4_info1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="邮箱地址"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/et2_info1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt5_info1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="个人签名"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/et3_info1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>
</LinearLayout>
