<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/register"
    tools:context="cn.jit.immessage.Info1Activity">

    <cn.jit.immessage.Round1ImageViewActivity
        android:id="@+id/info1_im"
        android:layout_width="120dp"
        android:layout_height="120dp"
       android:src="@mipmap/logo"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/info1_btn1"
        android:text="选择头像"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_button"

        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="昵称"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/info1_et1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/shape_button"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="性别"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"/>
        <RadioGroup

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:id="@+id/info1_sex">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="20sp"
                android:id="@+id/info1_rb1"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="20sp"
                android:id="@+id/info1_rb2"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="出生日期"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/info1_tv1"
            android:inputType="date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/info1_btn2"
            android:text="设置时间"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/shape3_button"
         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="邮箱地址"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:id="@+id/textView" />

        <EditText
            android:id="@+id/info1_et2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/shape_button"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="个人签名"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:id="@+id/textView2" />

        <EditText
            android:id="@+id/info1_et3"
            android:layout_width="200dp"
            android:layout_height="40dp"

            android:layout_marginLeft="3dp"
            android:background="@drawable/shape_button"/>
    </LinearLayout>
    <Button
        android:id="@+id/info1_btn3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="注册"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:background="@drawable/shape3_button"
        android:layout_marginTop="30dp"/>
</LinearLayout>
