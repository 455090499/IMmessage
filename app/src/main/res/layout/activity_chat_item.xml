<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/chat_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/chat_item_left_imag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/notify1_item_touxiang"/>
        <TextView
            android:id="@+id/chat_item_left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@mipmap/chatfrom_bg_normal"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView

            android:id="@+id/chat_item_right_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@mipmap/chatto_bg_normal"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/chat_item_right_imag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/notify1_item_touxiang"/>

    </LinearLayout>

</LinearLayout>