<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#d8e0e8">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageButton
            android:id="@+id/chat_plus"
            android:layout_width="30dp"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:background="@mipmap/chatting_plus_btn_icon"
            android:layout_weight="0.03" />

        <EditText
            android:id="@+id/chat_message"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Message"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/chat_send"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:text="发送" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/chat_imageButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/chatting_pic_icon" />

        <ImageButton
            android:id="@+id/chat_imageButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/chatting_file_icon"
            android:layout_toRightOf="@+id/chat_imageButton1"/>
        <ImageButton
            android:id="@+id/chat_imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/chat_imageButton2"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/chatting_cam_icon"/>

    </RelativeLayout>

</LinearLayout>
