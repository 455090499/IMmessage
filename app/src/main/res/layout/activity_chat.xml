<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#d8e0e8">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/side_nav_bar2"
        android:layout_height="70dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/chat_tv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:text="好友昵称"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/chat_btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableLeft="@mipmap/chat_back"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/chat_imbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@mipmap/chat_friend"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />


    </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_rv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/chat_imbtn1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/chatting_plus_btn_icon"
             />

        <EditText
            android:id="@+id/chat_et1"
            android:layout_height="35dp"
            android:layout_width="230dp"
            android:background="@drawable/shape9_button"
            android:hint="Let's Talk"
            android:paddingLeft="10dp"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/chat_btn2"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape6_button"
            android:layout_height="35dp"
            android:layout_width="50dp"
            android:textColor="#FFFFFF"
            android:text="发送" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/chat_imbtn2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/chatting_pic_icon" />

        <ImageButton
            android:id="@+id/chat_imbtn3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/chatting_file_icon"
            android:layout_toRightOf="@+id/chat_imbtn2"/>
        <ImageButton
            android:id="@+id/chat_imbtn4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/chat_imbtn3"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/chatting_cam_icon"/>

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
