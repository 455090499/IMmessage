<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape7_button"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/prombox_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="提示"
        android:textSize="18sp"
        />
    <!--android:textColor="@color/black"-->

    <TextView
        android:id="@+id/prombox_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:text="签到成功，获得200积分"
        android:textSize="15sp"
        android:textColor="#000000"
       />
    <!--android:textColor="@color/font_common_1"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF"
      />
    <!--android:background="@color/commom_background"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prombox_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1.0"
            android:gravity="center"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="#000000"
           />


        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CFCFCF" />


        <TextView
            android:id="@+id/prombox_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:layout_weight="1.0"
            android:text="确定"
            android:textColor="#000000"
            android:textSize="14sp"
          />
        android:background="@drawable/bg_dialog_right_white"
        android:textColor="@color/font_blue"

    </LinearLayout>

</LinearLayout>
