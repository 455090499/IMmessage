<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.jit.immessage.CreatActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:background="@drawable/side_nav_bar2"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center"
                android:text="发起群聊"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:id="@+id/textView6" />

            <Button
                android:id="@+id/create_btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableLeft="@mipmap/chat_back"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:textColor="#ffffffff"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/create_btn2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="创建"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="310dp"
                android:textColor="#ffffffff"
                />
        </RelativeLayout>




    </RelativeLayout>

    <cn.jit.immessage.Round1ImageViewActivity
        android:id="@+id/create_im"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="群号 :"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/create_et1"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="3dp"
            android:paddingLeft="10dp"
            android:background="@drawable/shape3_button"
            android:maxLines="1"
            android:inputType="number"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="群名称 :"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:id="@+id/textView3" />

        <EditText
            android:id="@+id/create_et2"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="3dp"
            android:paddingLeft="10dp"
            android:background="@drawable/shape3_button"
            android:maxLines="1"
            />
    </LinearLayout>


</LinearLayout>
