<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/register">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="请输入手机号码"
        android:textStyle="bold"
        android:textSize="34dp"/>
    <TextView
        android:paddingTop="5dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="为了确保您是本人操作，我们将发送验证码给您的手机，注意查收！"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView2" />

        <EditText
            android:id="@+id/register_et1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
          />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="密码    "
        android:textSize="24dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/register_et2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="24dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/register_et3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码     "
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView3" />

        <EditText
            android:id="@+id/register_et4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
          />
        <Button
            android:id="@+id/register_btn1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="发送验证码"
            android:textSize="18sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:text="（验证码为一分钟有效）"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <Button
        android:id="@+id/register_btn2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="下一步"
        android:background="@android:color/transparent"
        android:textSize="24dp"
        android:layout_marginTop="30dp"/>
</LinearLayout>
</LinearLayout>

</LinearLayout>
